# Environment Configuration for Demotivation Station Backend

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (PostgreSQL recommended for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=demotivator
DB_USER=demotivator_user
DB_PASSWORD=your_secure_password
DB_SSL=false

# Redis Configuration (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# AI Service Configuration
OPENROUTER_API_KEY=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
AI_MODEL=gpt-4
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.8

# Email Configuration (for transactional emails)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=your_sendgrid_api_key
EMAIL_FROM=noreply@demotivationstation.com

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=https://demotivationstation.com/success
STRIPE_CANCEL_URL=https://demotivationstation.com/cancel

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://demotivationstation.com/auth/google/callback

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_FREE_DEMOTIVATIONS=50
RATE_LIMIT_PRO_DEMOTIVATIONS=1000
RATE_LIMIT_ENTERPRISE_DEMOTIVATIONS=-1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key

# Feature Flags
ENABLE_VOICE_GENERATION=true
ENABLE_CHAT_MODE=true
ENABLE_ANALYTICS=true
ENABLE_ADMIN_PANEL=true
